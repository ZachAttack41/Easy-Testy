<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Testing - EasyTest</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anta&display=swap" rel="stylesheet">
</head>
<style>
    .anta-regular {
        font-family: "Anta", sans-serif;
        font-weight: 400;
        font-style: normal;
    }

    body {
        font-family: "Anta", sans-serif;
        background-color: #122028; /* dark background */
        color: #ffffff; /* light text */
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .container {
        text-align: center;
        max-width: 800px;
        width: 100%;
        padding: 40px;
        background-color: #0e191f; /* dark container background */
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.1); /* subtle shadow */
    }

    h1 {
        color: #ffffff; /* white header text */
        font-size: 32px;
        margin-bottom: 20px;
    }

    .question {
        margin-bottom: 20px;
        text-align: left;
    }

    .question-number {
        font-size: 1.2em;
        margin-bottom: 10px;
        color: #cccccc; /* light gray */
    }

    .question-content {
        font-size: 1.2em;
        margin-bottom: 10px;
    }

    .options {
        list-style: none;
        padding: 0;
    }

    .option {
        margin-bottom: 10px;
    }

    .option input[type="radio"] {
        margin-right: 10px;
    }

    .submit-btn {
        padding: 15px 30px;
        font-size: 1.2em;
        background-color: #0c151a; /* dark button background */
        color: #ffffff; /* white button text */
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .submit-btn:hover {
        background-color: #060c10; /* darker button background on hover */
    }
</style>

<body>
    <div class="container">
        <h1>Testing - EasyTest</h1>
        <% if (test && test.questions && test.questions.length > 0) { %>
            <% test.questions.forEach((question, questionIndex) => { %>
                <div class="question">
                    <p class="question-number">Question <%= questionIndex + 1 %>:</p>
                    <% if (question.image) { %>
                        <img src="<%= question.image %>" alt="Question Image" class="question-image">
                    <% } %>
                    <p class="question-content"><%= question.content %></p>
                    <ul class="options">
                        <% question.answers.forEach((answer, answerIndex) => { %>
                            <li class="option">
                                <input type="radio" id="answer<%= questionIndex %>-<%= answerIndex %>" name="answer<%= questionIndex %>" value="<%= answerIndex %>">
                                <label for="answer<%= questionIndex %>-<%= answerIndex %>"><%= answer %></label>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            <% }); %>
        <% } else { %>
            <p>No questions found for this test.</p>
        <% } %>
        <button class="submit-btn">Submit</button>
    </div>
</body>

</html>